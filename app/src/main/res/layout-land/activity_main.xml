<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="368dp"
        android:layout_height="257dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/Arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/arms" />

        <ImageView
            android:id="@+id/Ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/Eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/Eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/Glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/Hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/Mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/Mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/mustache" />

        <ImageView
            android:id="@+id/Nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/nose" />

        <ImageView
            android:id="@+id/Shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/shoes" />

    </FrameLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="219dp"
        android:layout_height="248dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="checkClicked"
            android:text="Hat"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0"
            tools:text="Hat" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="115dp"
            android:layout_height="49dp"
            android:onClick="checkClicked"
            android:text="Eyebrows"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1"
            tools:text="Eyebrows" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="113dp"
            android:layout_height="49dp"
            android:onClick="checkClicked"
            android:text="Nose"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2"
            tools:text="Nose" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="119dp"
            android:layout_height="47dp"
            android:onClick="checkClicked"
            android:text="Arms"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3"
            tools:text="Arms" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="115dp"
            android:layout_height="43dp"
            android:onClick="checkClicked"
            android:text="Mustache"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="4" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Eyes"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="0"
            tools:text="Eyes" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Glasses"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1"
            tools:text="Glasses" />

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Mouth"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="2"
            tools:text="Mouth" />

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Ears"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="3"
            tools:text="Ears" />

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Shoes"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="4"
            tools:text="Shoes" />
    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>